<%= form_with model: article do |form| %>


  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %><br>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :author_id, "Author" %><br>
  <% if @authors && !@authors.empty? %>
    <%= form.collection_select :author_id, @authors, :id, :fname, { prompt: "Select author" } %>
  <% else %>
    <%= form.select :author_id, Author.pluck(:fname, :id), { prompt: "Select author else" } %>
  <% end %>
</div>


  <div>
  <%= form.label :status %><br>
  <%= form.select :status, Visible::VALID_STATUSES, selected: article.status || 'public' %>
</div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
